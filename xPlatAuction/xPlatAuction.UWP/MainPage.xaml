<Page
	x:Class="xPlatAuction.UWP.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <Grid>
	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
	  <TextBox x:Name="Message" 
		         Text="Welcome to Auction Mobile App!" 
		         VerticalAlignment="Center" 
		         HorizontalAlignment="Center"/>
	  <Button Content="Load an Item" 
		        Click="BtnLoadItem_OnClick" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="1.649,0.833" />
	</StackPanel>

  </Grid>
</Page>
